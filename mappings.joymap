# overrides for joy
 
# buttons on the right joycon
buttons.right.x  -> key.e
buttons.right.b  -> hold.shift
buttons.right.a  -> hold.space
# buttons.right.y  -> .
# buttons.right.r  -> .
buttons.right.zr -> mouse.button-lfclick
buttons.right.sl -> joy.enable-type-mode
# buttons.right.sr -> .

# shared buttons
buttons.shared.plus     -> key.escape
buttons.shared.l-stick  -> hold.ctrl
buttons.shared.capture  -> key.f12
# buttons.shared.minus    -> .
# buttons.shared.home     -> .
# buttons.shared.r-stick  -> .
    
# buttons on the left joycon
# buttons.left.down   -> 
# buttons.left.up     -> 
# buttons.left.right  -> key.backspace
# buttons.left.left   -> .
# buttons.left.l      -> . 
buttons.left.zl     -> mouse.button-rtclick

# analog actions on the left controller
analog-sticks.left.h-max   -> hold.d
analog-sticks.left.h-min   -> hold.a
analog-sticks.left.v-max   -> hold.w
analog-sticks.left.v-min   -> hold.s

mouse.pos.vel  -> analog-sticks.right

